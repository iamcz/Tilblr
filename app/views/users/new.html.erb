<section class="register-form">
  <h1>tilblr.</h1>
  <section class="tilblr-description">
    <p>Connect with a global learning community.</p>
    <p>Share your educational growth.</p>
  </section>

  <%= form_for @user do |f| %>
    <%= render 'layouts/errors' %>

    <section class="text-inputs">
      <%= f.text_field :email, placeholder: "Email" %>
      <%= f.password_field :password, placeholder: "Password" %>
      <%= f.text_field :username, placeholder: "Username" %>
    </section>

    <%= f.submit "Sign Up" %>
  <% end %>
  <form action="/session" method="post" class="guest-login">
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">
    <input type="hidden" name="user[email]" value="guest@tilblr.com">
    <input type="hidden" name="user[password]" value="password">
    <input type="submit" value="Log in as guest">
  </form>
</section>
