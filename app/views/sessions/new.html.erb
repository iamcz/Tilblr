<section class="login-form">
  <h1>tilblr.</h1>
  <%= form_for :user, url: {controller: :sessions, action: :create} do |f| %>
    <%= render 'layouts/errors' %>
    <%= f.text_field :email, placeholder: "Email" %>
    <%= f.password_field :password, placeholder: "Password" %>
    <%= f.submit "Log in" %>
    <%= link_to "Sign Up", {controller: :users, action: :new}, {class: "register-link"} %>
    <%= link_to "Sign in with Google", "/auth/google_oauth2", class: "google-login" %>
  <% end %>
  <form action="/session" method="post" class="guest-login">
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">
    <input type="hidden" name="user[email]" value="guest@tilblr.com">
    <input type="hidden" name="user[password]" value="password">
    <input type="submit" value="Sign in as guest">
  </form>
</section>
